<?xml version="1.0"?>
<schema version="0.3">
    <table name="btProBlogSettings">
        <field name="bID" type="I">
            <key />
            <unsigned />
            <autoincrement/>
        </field>
        <field name="tweet" type="I">
            <default value="1"/>
        </field>
        <field name="google" type="I">
            <default value="0"/>
        </field>
        <field name="fb_like" type="I">
            <default value="0"/>
        </field>
        <field name="addthis" type="I">
            <default value="1"/>
        </field>
        <field name="author" type="I">
            <default value="0"/>
        </field>
        <field name="comments" type="I">
            <default value="1"/>
        </field>
        <field name="trackback" type="I">
            <default value="0"/>
        </field>
        <field name="canonical" type="I">
            <default value="1"/>
        </field>
        <field name="search_path" type="I">
            <default value="0"/>
        </field>
        <field name="mobile_path" type="I">
            <default value="0"/>
        </field>
        <field name="thumb_width" type="I">
            <default value="110"/>
        </field>
        <field name="thumb_height" type="I">
            <default value="120"/>
        </field>
        <field name="disqus" type="C" size="32">
        </field>
        <field name="icon_color" type="C" size="32">
            <default value="brown"/>
        </field>
        <field name="ctID" type="I">
            <default value="120"/>
        </field>
        <field name="sharethis" type="C"  size="128">
        </field>
        <field name="embedly" type="C"  size="128">
        </field>
        <field name="alchemy" type="C"  size="256">
        </field>
        <field name="breakSyntax" type="C" size="255">
            <default value="&lt;hr /&gt;"/>
        </field>
        <field name="pageTemplate" type="I">
            <default value="0"/>
        </field>
    </table>
    <table name="btProBlogAuth">
        <field name="baID" type="I">
            <key />
            <unsigned />
            <autoincrement/>
        </field>
        <field name="uID" type="I">
            <default value="1"/>
        </field>
        <field name="device" type="C" size="64">
        </field>
        <field name="token" type="C" size="32">
        </field>
    </table>
</schema>
