<?xml version="1.0" encoding="UTF-8"?>
<schema
  xmlns="http://www.concrete5.org/doctrine-xml/0.5"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.concrete5.org/doctrine-xml/0.5 http://concrete5.github.io/doctrine-xml/doctrine-xml-0.5.xsd">
   <table name="dat_prayers">
        <field name="pID" type="integer" size="10">
            <unsigned/>
            <autoincrement/>
            <key/>
        </field>
        <field name="first_name" type="string" size="255"></field>
        <field name="last_name" type="string" size="255"></field>
        <field name="email" type="string" size="255"></field>
        <field name="city" type="string" size="255"></field>
        <field name="country" type="string" size="255"></field>
        <field name="prayer_request" type="text"></field>
        <field name="post_public" type="integer"></field>
        <field name="status" type="integer">
            <default value="0"/>
        </field>
        <field name="email_consent" type="integer"></field>
        <field name="bID" type="integer"></field>
        <field name="language" type="string" size="10"></field>
        <field name="date_created" type="datetime"></field>
        <field name="date_modified" type="datetime"></field>
    </table>
</schema>